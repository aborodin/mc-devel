# This file describes which highlighting scheme is applied to a particular
# file in mcedit.
#
# Group name is a description of the file type and it is agroup ID,
# which is used to override syntax definition from another Syntax.ini file.
#
# Each group consists of folloing keys:
#       pattern - a regular expression that is matched against the file name.
#               The first pattern that matches wins, that is, all the patterns
#               below are ignored.
#       pattern_ignore_case - defines whether pattern is case insensitive or not.
#               Default is false.
#       first_line - a regular expression that is matched against the first line
#               of the file.
#       first_line_ignore_case - defines whether first_line is case insensitive
#               or not. Default if false.
#       file - a highlighting definition file.
#               TODO: describe order of file search.

# TODO: check usage of \\ here
#       add include of another Syntax.ini

[Syntax Highlighting Definitions]
pattern = [Ss]yntax$
first_line = ^#\ssyntax\srules\sversion\s
first_line_ignore_case = true
file = syntax.syntax

[File Highlighting Definitions]
pattern = filehighlight.ini$
first_line = ^#\sfile\shighlight\srules\sversion\s
first_line_ignore_case = true
file = filehighlight.syntax

[Eiffel Source File]
pattern = ..*\.e$
file = eiffel.syntax

[Diff Output]
pattern = ..*\.(diff|rej|patch)$
first_line = ^(diff|Index:)\s
file = diff.syntax

[LSM File]
pattern = ..*\.lsm$
file = lsm.syntax

[Shell Script]
pattern = .*(bash_completion|profile|\.(sh|bash_login|bash_profile|bash_logout|bash_aliases|bash_exports|bash_history|bashrc|profile|zlogin|zlogout|zprofile|zshenv|zshrc))$
first_line = ^#!\s*/(.*/|usr/bin/env\s)([a-z]?|ba|pdk)sh
file = sh.syntax

[Perl Program]
pattern = ..*\.(pl|pm|psgi|t)$
pattern_ignore_case = true
first_line = ^#!.*([\s/]perl|@PERL@)
file = perl.syntax

[Python Program]
pattern = ..*\.py$
